{
  "name": "engineercv",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "description": "Tool for creating best-practice engineering resumes from YAML files",
  "author": "Lukas Bach <contact@lukasbach.com>",
  "license": "MIT",
  "bin": "./lib/index.js",
  "exports": "./lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "publish-fast",
    "start": "tsx src/index.ts"
  },
  "dependencies": {
    "@react-pdf/renderer": "^4.3.0",
    "@react-pdf/stylesheet": "^6.1.0",
    "commander": "^14.0.0",
    "glob": "^11.0.3",
    "react": "^19.1.0",
    "react-markdown": "^10.1.0",
    "ts-deepmerge": "^7.0.3",
    "yaml": "^2.8.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@lukasbach/eslint-config-deps": "^1.0.7",
    "@types/node": "^24.0.4",
    "@types/react": "^19",
    "esbuild": "^0.25.5",
    "esbuild-runner": "^2.2.2",
    "eslint": "8",
    "publish-fast": "^0.0.20",
    "tsx": "^4.20.3",
    "typescript": "latest"
  },
  "engines": {
    "node": ">=16"
  },
  "eslintConfig": {
    "extends": "@lukasbach/base",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "ignorePatterns": [
      "lib",
      "dist",
      "*.js"
    ]
  },
  "publish": {
    "preScripts": "build,lint:test,test",
    "releaseNotesSource": "next-releasenotes.md"
  },
  "volta": {
    "node": "22.17.0",
    "yarn": "4.9.2"
  },
  "funding": "https://github.com/sponsors/lukasbach",
  "keywords": [
    "cv",
    "resume",
    "generator",
    "tool",
    "yaml",
    "yml"
  ]
}
